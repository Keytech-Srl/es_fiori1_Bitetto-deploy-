<mvc:View
    controllerName="esfiori1.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
>
    <tnt:ToolPage
        id="toolPage"
        sideExpanded="false"
    >
        <tnt:header>
            <tnt:ToolHeader>
                <Button
                    icon="sap-icon://menu2"
                    press=".toogleExpanded"
                />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation>
                <tnt:NavigationList>
                    <tnt:NavigationListGroup text="Main">
                        <tnt:NavigationListItem
                            text="Home"
                            icon="sap-icon://home"
                            select=".navigate('home')"
                        />
                        <tnt:NavigationListItem
                            text="Students"
                            icon="sap-icon://customer"
                            select=".navigate('students')"
                        />
                    </tnt:NavigationListGroup>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>

        <tnt:mainContents>
            <App id="app" />
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
